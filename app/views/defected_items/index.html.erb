<p id="notice"><%= notice %></p>


<h3>
Kiddie Kobbler Westboro
<small class="text-muted">Defected items</small>
</h3>

<table class="table table-hover">


  <thead>
    <tr>
    <th>ID</th>
      <th>Company</th>
      <th>Name</th>
      <th>Description</th>
      <th>Status</th>
      <th>Date</th>
      <th>Total</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @defected_items.each do |defected_item| %>
      <tr>
      <td><%= defected_item.id %></td>
        <td><%= defected_item.company %></td>
        <td><%= defected_item.full_name %></td>
        <td><%= defected_item.description %></td>
        <td><%= defected_item.status %></td>
        <td><%= defected_item.created_at.strftime('%b. %d, %Y') %></td>
        <td>$<%= defected_item.total %></td>
        <td><%= link_to 'Show', defected_item, class: 'btn btn-sm btn-primary' %></td>
        <td><%= link_to 'Edit', edit_defected_item_path(defected_item), class: 'btn btn-sm btn-warning' %></td>
        <td><%= link_to 'Destroy', defected_item, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-sm btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Defected Item', new_defected_item_path, class: 'btn btn-success' %>
